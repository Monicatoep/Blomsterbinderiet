<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Blomsterbinderiet</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Blomsterbinderiet.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">Blomsterbinderiet</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">


                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Blomster
                            </a>
                            <div class="dropdown-menu">
                                <a class="btn" asp-area="" asp-page="/Product/GetAllProducts">GetAllProducts</a>
                                <div class="dropdown-divider"></div>
                                <a class="btn" asp-area="" asp-page="/">Blomster 2</a>
                            </div>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/">Bryllup</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/">Begravelse</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/">Tilbehør</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav flex-grow-2">
                        <li>
                            <div class="search-container pt-1">
                                <form action="/">
                                    <input type="text" placeholder="Søg på produkter" name="search">
                                    <button type="submit"><i class="fa fa-search"></i></button>
                                </form>
                            </div>
                        </li>
                        <li>
                            <a class="nav-link text-dark ps-4" asp-area="" asp-page="/Basket/Basket"><i class="fa fa-shopping-basket fa-lg"></i></a>
                        </li>
                        @if (Context.User.IsInRole("Customer")) //Hvis logget ind som bruger
                        {


                            <li class="nav-item dropdown">

                                <button type="button" class="nav-link text-dark dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <i class="fa fa-user"></i>
                                    <span class="sr-only">Toggle Dropleft</span>
                                </button>

                                <div class="dropdown-menu">
                                    <a class="btn" asp-area="" asp-page="/UserPages/ProfilePage">Profil</a>
                                    <a class="btn" asp-area="" asp-page="/UserPages/MyOrders">Mine ordrer</a>
                                    <div class="dropdown-divider"></div>
                                    <a class="btn" asp-area="" asp-page="/UserPages/Logout">Log ud</a>
                                </div>

                            </li>
                        }

                        else if (Context.User.IsInRole("Admin")) //Hvis logget ind som admin
                        {
                            <li class="nav-item dropdown">

                                <button type="button" class="nav-link text-dark dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <i class="fa fa-user"></i>
                                    <span class="sr-only">Toggle Dropleft</span>
                                </button>

                                <div class="dropdown-menu">
                                    <a class="btn" asp-area="" asp-page="/">Profil</a>
                                    <a class="btn" asp-area="" asp-page="/Admin/CreateUser">Opret bruger</a>
                                    <a class="btn" asp-area="" asp-page="/Admin/GetAllUsers">Se alle brugere</a>
                                    <a class="btn" asp-area="" asp-page="/Admin/GetAllOrders">Se alle ordrer</a>
                                    <a class="btn" asp-area="" asp-page="/Admin/CreateProduct">Opret nyt product</a>
                                    <div class="dropdown-divider"></div>
                                    <a class="btn" asp-area="" asp-page="/UserPages/Logout">Log ud</a>
                                </div>

                            </li>
                        }
                        else if (Context.User.IsInRole("Employee")) //Hvis logget ind som medarbejder 
                        {
                            <li class="nav-item dropdown">

                                <button type="button" class="nav-link text-dark dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <i class="fa fa-user"></i>
                                    <span class="sr-only">Toggle Dropleft</span>
                                </button>

                                <div class="dropdown-menu">
                                    <a class="btn" asp-area="" asp-page="/">Profil</a>
                                    <a class="btn" asp-area="" asp-page="/Admin/CreateUser">Opret bruger</a>
                                    <a class="btn" asp-area="" asp-page="/Admin/GetAllOrders">Se alle ordrer</a>
                                    <a class="btn" asp-area="" asp-page="/Product/CreateProduct">Opret nyt product</a>
                                    <div class="dropdown-divider"></div>
                                    <a class="btn" asp-area="" asp-page="/UserPages/Logout">Log ud</a>
                                </div>

                            </li>
                        }
                        else //Hvis ikke logget ind
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/UserPages/Login">Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Customer/CustomerSignUp">Opret bruger</a>
                            </li>
                        }
                        
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top text-muted pb-0 mb-0" style="margin-bottom:-40px">
        @* footer *@
        <div class="container pb-0 mb-0" style="margin-bottom:-40px">
            <div class="row mt-5 pb-0 mb-0" style="margin-bottom:-40px">
                <div class="col">
                    <table>
                        <thead>
                            <tr>
                                <th>Åbningstider</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Mandag</td>
                                <td>7-18</td>
                            </tr>
                            <tr>
                                <td>Tirsdag</td>
                                <td>7-18</td>
                            </tr>
                            <tr>
                                <td>Onsdag</td>
                                <td>7-18</td>
                            </tr>
                            <tr>
                                <td>Torsdag</td>
                                <td>7-18</td>
                            </tr>
                            <tr>
                                <td>Fredag</td>
                                <td>7-18</td>
                            </tr>
                            <tr>
                                <td>Lørdag</td>
                                <td>7-18</td>
                            </tr>
                            <tr>
                                <td>Søndag</td>
                                <td>7-18</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="col">
                    <a asp-page="/Static/About">Om os</a> <br />
                    <a asp-page="/Static/History">Historie</a>
                    <p></p>
                    <p>
                        <b>Adresse</b> - Gågaden 7, 4000 Rosilde<br />
                        <b>Telefon</b> - 12345678<br />
                        <b>E-mail</b> - Blomster@binderiet.org<br />
                        <b>CVR-nummer</b> - 12345678
                    </p>
                </div>
                <div class="col">
                    <a>Facebook</a> <br />
                    <a>Instagram</a> <br />
                    <a asp-page="/Static/FAQ">Ofte stillede spørgsmål</a> <br />
                    <a asp-page="/Static/TermsOfService">Handelsbetingelser</a> <br />
                </div>
            </div>
        </div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.7/dist/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>