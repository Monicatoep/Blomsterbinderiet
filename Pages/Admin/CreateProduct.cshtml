}
<form method="post" enctype="multipart/form-data">
    <div>
        <label asp-for="@Model.Product.Name"></label>
        <input asp-for="@Model.Product.Name" class="form-control" />
        <span asp-validation-for="@Model.Product.Name" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="@Model.Product.Description"></label>
        <input asp-for="@Model.Product.Description" class="form-control" />
        <span asp-validation-for="@Model.Product.Description" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="@Model.Product.Price"></label>
        <input asp-for="@Model.Product.Price" class="form-control" />
        <span asp-validation-for="@Model.Product.Price" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="@Model.Product.UploadedImage"></label>
        <input asp-for="@Model.Product.UploadedImage" class="form-control" />
        <span asp-validation-for="@Model.Product.UploadedImage" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="@Model.Product.Colour"></label>
        <input asp-for="@Model.Product.Colour" class="form-control" />
        <span asp-validation-for="@Model.Product.Colour" class="text-danger"></span>
    </div>
