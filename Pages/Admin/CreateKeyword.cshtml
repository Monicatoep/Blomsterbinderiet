@page
@model Blomsterbinderiet.Pages.Admin.CreateKeywordModel
@{
}

<div class="card mb-3 p-3" id="titlecard">
    <h1>Opret Nøgleord</h1>
</div>
<div class="card mb-3">
    <div class="card-body">
        <form method="post">
            <div class="form-group mt-2">
                <label asp-for="@Model.Name" class="control-label">Navn</label>
                <input asp-for="@Model.Name" class="form-control" id="noborder" style="max-width: 15rem" />
                <span asp-validation-for="@Model.Name" class="text-danger"></span>
            </div>
            <div class="form-group pt-4">
                <button class="btn btn-danger" id="btnyellow" type="submit" asp-page-handler="AddKeyword">Opret nøgleord</button>
                <a asp-page="GetAllKeywords" class="btn btn-primary" id="btnlight">Tilbage til nøgleord liste</a>
            </div>
        </form>
    </div>
</div>