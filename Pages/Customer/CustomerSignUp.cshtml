@page
@model Blomsterbinderiet.Pages.Customer.CustomerSignUpModel
@{
}

<div class="container p-4">
    <div class="col-md-12">
        <div class="card mb-3 p-3" id="titlecard">
            <h1>Opret bruger</h1>
        </div>
    </div>
</div>
<div class="container p-4 d-flex justify-content-center">
    <div class="col-md-6">
        <div class="card mb-3">
            <div class="card-body p-4 d-flex align-items-center justify-content-center" style="min-height: 100%;">
                <!-- Ensuring full height and centered content -->
                <div class="row w-100">
                    <!-- Full width row -->
                    <div class="col-md-12">
                        <!-- Change to full width for better centering -->
                        <form method="post">
                            <div class="form-group">
                                <label asp-for="@Model.Name" class="control-label">Navn</label>
                                <input asp-for="@Model.Name" class="form-control" id="noborder" />
                                <span asp-validation-for="@Model.Name" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="@Model.Email" class="control-label">Email</label>
                                <input asp-for="@Model.Email" class="form-control" id="noborder" />
                                <span asp-validation-for="@Model.Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="@Model.Password" class="control-label">Password</label>
                                <input asp-for="@Model.Password" class="form-control" id="noborder" />
                                <span asp-validation-for="@Model.Password" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="@Model.Phone" class="control-label">Telefonnummer</label>
                                <input asp-for="@Model.Phone" class="form-control" id="noborder" />
                                <span asp-validation-for="@Model.Phone" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="@Model.Address" class="control-label">Adresse</label>
                                <input asp-for="@Model.Address" class="form-control" id="noborder" />
                                <span asp-validation-for="@Model.Address" class="text-danger"></span>
                            </div>
                            <div class="form-group pt-4">
                                <input type="submit" value="Opret" class="btn btn-primary" id="btnyellow" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="p-2">
                <a id="textcolor" asp-page="/Index">Gå tilbage</a>
            </div>
        </div>
    </div>
</div>