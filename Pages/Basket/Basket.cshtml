@page
@model Blomsterbinderiet.Pages.Basket.BasketModel
@{
}
<h1>Kurv</h1>
<table class="table">
    <thead>
        <tr>
            <th>Produkt</th>
            <th>Stykpris</th>
            <th>Antal</th>
            <th>Totalpris</th>
        </tr>
    </thead>
    <tbody>
        @foreach(Models.OrderLine item in Model.OrderLines)
        {
            <tr>
                <td>@item.Product.Name</td>
                <td>@item.Product.Price</td>
                <td>
                    <form method="post" class="form-inline">
                        <div class="form-group">
                            @item.Amount
                            <i class="px-3"></i>
                            <button class="btn btn-primary" type="submit" title="Plus en" asp-page-handler="Plus" asp-route-id="@item.Product.ID"><i class="fa fa-plus"></i></button>
                            <button class="btn btn-primary" type="submit" title="Minus en" asp-page-handler="Minus" asp-route-id="@item.ProductID"><i class="fa fa-minus"></i></button>
                        </div>
                    </form>
                </td>
                <td>@(item.Product.Price * item.Amount)</td>
            </tr>
        }
    </tbody>
</table>

<div>Ordresum @Model.OrderSum <a class="btn" asp-area="" asp-page="/UserPages/Login">Færdiggør Order</a></div>
