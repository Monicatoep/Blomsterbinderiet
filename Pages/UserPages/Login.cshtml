@page
@model Blomsterbinderiet.Pages.Customer.LoginModel
@{
    ViewData["Title"] = "Log in";
}

<div class="container p-5 d-flex justify-content-center">
    <div class="col-md-2">
        <div class="card mb-3 p-3" id="titlecard">
            <div class="card-body p-2 d-flex align-items-center justify-content-center">
                <form method="post">
                    <div class="form-group">
                        <label asp-for="Email" class="col-form-label "></label>
                        <div>
                            <input asp-for="Email" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password" class="col-form-label"></label>
                        <div>
                            <input asp-for="Password" />
                        </div>
                    </div>
                    <div class="form-group pt-3">
                        <button class="btn btn-primary" id="btnyellow">Log in</button>
                    </div>
                </form>
                
                </>
            </div>
            <div class="text-center">
                @Model.Message
            </div>
        </div>
    </div>
</div>

