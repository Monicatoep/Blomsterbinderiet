@page
@model Blomsterbinderiet.Pages.UserPages.MyOrdersModel
@{
}
<h1>Dine ordrer</h1>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Bestillings dato</th>
            <th>Mængde</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model.Orders)
        {
            <tr>
                <td>@order.Order.Id</td>
                <td>@order.Order.OrderDate</td>
                <td>@order.Amount</td>
                <td>@order.Order.OrderStatus</td>
            </tr>
        }
    </tbody>
</table>