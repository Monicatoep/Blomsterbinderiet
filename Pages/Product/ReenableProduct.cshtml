@page
@model Blomsterbinderiet.Pages.Product.ReenableProductModel
@{
    ViewData["Title"] = "Genaktiver produkt";
}

<h1>Genaktivering</h1>
<div class="alert alert-success">
    <h5>Er du sikker på at du vil genaktivere dette produkt - @Model.Product.Name</h5>
    <form method="post">
        <button type="submit" class="btn btn-success">Ja</button>
        <a class="btn btn-primary" asp-page="/Product/GetAllProducts">Nej</a>
    </form>
</div>